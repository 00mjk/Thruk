<div class='hostTotals'>Host Status Totals</div>
<table border="0" cellspacing="0" cellpadding="0">
  <tr>
    <td>
      <table border="1" class='hostTotals'>
        <tr>
          [% SET sfilter = '&amp;style=hostdetail'        IF style == 'hostdetail' %]
          [% SET filter  = 'hostgroup=' _ hostgroup       IF hostgroup             %]
          [% SET filter  = 'servicegroup=' _ servicegroup IF servicegroup          %]
          [% SET filter  = 'host=' _ host                 IF host                  %]

          [% SET sfilter = sfilter _ '&amp;servicestatustypes=' _ servicestatustypes IF servicestatustypes %]

          <th class='hostTotals'><a class='hostTotals' href='status.cgi?[% filter %][% sfilter %]&amp;hoststatustypes=2'>Up</a></th>
          <th class='hostTotals'><a class='hostTotals' href='status.cgi?[% filter %][% sfilter %]&amp;hoststatustypes=4'>Down</a></th>
          <th class='hostTotals'><a class='hostTotals' href='status.cgi?[% filter %][% sfilter %]&amp;hoststatustypes=8'>Unreachable</a></th>
          <th class='hostTotals'><a class='hostTotals' href='status.cgi?[% filter %][% sfilter %]&amp;hoststatustypes=1'>Pending</a></th>
        </tr>
        <tr>
          <td class='[% IF host_stats.up > 0 %]hostTotalsUP[% ELSE %]hostTotals[% END %]'>[% host_stats.up %]</td>
          <td class='[% IF host_stats.down > 0 %]hostTotalsDOWN[% ELSE %]hostTotals[% END %]'>[% host_stats.down %]</td>
          <td class='[% IF host_stats.unreachable > 0 %]hostTotalsUNREACHABLE[% ELSE %]hostTotals[% END %]'>[% host_stats.unreachable %]</td>
          <td class='[% IF host_stats.pending > 0 %]hostTotalsPENDING[% ELSE %]hostTotals[% END %]'>[% host_stats.pending %]</td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td align="center">
      <table border="1" class='hostTotals'>
        <tr>
          <th class='hostTotals'><a class='hostTotals' href='status.cgi?hostgroup=[% hostgroup %]&amp;style=hostdetail&amp;hoststatustypes=12'><i>All Problems</i></a></th>
          <th class='hostTotals'><a class='hostTotals' href='status.cgi?hostgroup=[% hostgroup %]&amp;style=hostdetail'><i>All Types</i></a></th>
        </tr>
        <tr>
          <td class='[% IF host_stats.down + host_stats.unreachable > 0 %]hostTotalsPROBLEMS[% ELSE %]hostTotals[% END %]'>[% host_stats.down + host_stats.unreachable %]</td>
          <td class='hostTotals'>[% host_stats.up + host_stats.down + host_stats.unreachable + host_stats.pending %]</td>
        </tr>
      </table>
    </td>
  </tr>
</table>
